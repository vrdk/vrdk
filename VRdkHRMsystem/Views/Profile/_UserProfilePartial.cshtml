@model VRdkHRMsystem.Models.Profile.ProfileViewModel
@{
    var photoBlobUrl = $"https://vrdkstorage.blob.core.windows.net/photos/";
}
<div class="profile">
    <div class="profile__header">
        @if (User.IsInRole("Administrator"))
        {
           <a href="@Url.Action("EditEmployee","Admin", new { id = Model.EmployeeId })"><div class="profile__header__img"></div></a>
        }       
        <div class="profile__imgblock"><img src="@($"{photoBlobUrl}{Model.EmployeeId}.png")" alt="photo" /></div>
        <p class="profile__name">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</p>
        <p class="profile__post">@Html.DisplayFor(model => model.Post)</p>
        @if (Model.State == true)
        {
            <p class="profile__status_active">Работает</p>
        }
        else
        {
            <p class="profile__status_dismissed">Уволен</p>
        }
    </div>
    <div class="profile__data">
        <div class="profile__datablock">
            <p class="profile__blockname">@Html.DisplayNameFor(model => model.BirthDate):</p>
            <p class="profile__blockcontent">@Html.DisplayFor(model => model.BirthDate)</p>
        </div>
        <div class="profile__datablock">
            <p class="profile__blockname">@Html.DisplayNameFor(model => model.WorkEmail):</p>
            <p class="profile__blockcontent">@Html.DisplayFor(model => model.WorkEmail)</p>
        </div>
        <div class="profile__datablock">
            <p class="profile__blockname">@Html.DisplayNameFor(model => model.PersonalEmail):</p>
            <p class="profile__blockcontent">@Html.DisplayFor(model => model.PersonalEmail)</p>
        </div>
        <div class="profile__datablock">
            <p class="profile__blockname">@Html.DisplayNameFor(model => model.PhoneNumber):</p>
            <p class="profile__blockcontent">@Html.DisplayFor(model => model.PhoneNumber)</p>
        </div>
        <div class="profile__datablock">
            <p class="profile__blockname">@Html.DisplayNameFor(model => model.HireDate):</p>
            <p class="profile__blockcontent">@Html.DisplayFor(model => model.HireDate)</p>
        </div>
        <div class="profile__datablock">
            <p class="profile__blockname">@Html.DisplayNameFor(model => model.Team):</p>
            <p class="profile__blockcontent">@Html.DisplayFor(model => model.Team)</p>
        </div>
        <div class="profile__datablock">
            <p class="profile__blockname">@Html.DisplayNameFor(model => model.Teamlead)</p>
            <p class="profile__blockcontent">@Html.DisplayFor(model => model.Teamlead)</p>
        </div>
    </div>
</div>