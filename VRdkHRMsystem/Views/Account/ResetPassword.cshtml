@model ResetPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="initial-scale=1.0, width=device-width" />
    <title>Vrdk</title>
    <link rel="stylesheet" type="text/css" href="~/css/main.min.css" />
</head>
<body>
    <div class="auth">
        <img src="~/images/logo.png" alt="logo" />
        <form asp-action="ResetPassword" method="post" class="auth__form">
            <input asp-for="Code" hidden />
            <label asp-for="Email"></label><span asp-validation-for="Email" class="text-danger"></span>
            <input class="input" asp-for="Email" />
            <label asp-for="Password"></label><span asp-validation-for="Password" class="text-danger"></span>
            <input class="input" asp-for="Password" />
            <label asp-for="ConfirmPassword"></label><span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <input class="input" asp-for="ConfirmPassword" />
            <button class="button" type="submit">Изменить</button>
        </form>
    </div>
</body>
</html>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
