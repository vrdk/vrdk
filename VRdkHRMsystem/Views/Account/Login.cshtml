@model LoginViewModel

@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="initial-scale=1.0, width=device-width" />
    <title>Vrdk</title>
    <link rel="stylesheet" href="~/css/main.min.css" asp-append-version="true" />
</head>
<body>
    <div class="auth">
        <img src="~/images/logo.png" alt="logo" />
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="auth__form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Email"></label><span asp-validation-for="Email" class="text-danger"></span>
            <input class="input" asp-for="Email" />
            <label asp-for="Password"></label><span asp-validation-for="Password" class="text-danger"></span>
            <input class="input" type="password" asp-for="Password" /><a href="@Url.Action("ForgotPassword","Account")">Забыли пароль?</a>
            <button type="submit" class="button">Войти</button>
        </form>
    </div>
</body>
</html>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}