@model LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="initial-scale=1.0, width=device-width" />
    <title>Vrdk</title>
    <link rel="stylesheet" href="~/css/main.min.css" asp-append-version="true" />
</head>
<body>
    <div class="preloader" id="preloader" onclick="closePreloader(this)">
        <div class="item-1"></div>
        <div class="item-2"></div>
        <div class="item-3"></div>
        <div class="item-4"></div>
        <div class="item-5"></div>
    </div>
    <div class="auth">
        <img src="~/images/logo.png" alt="logo" />
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="auth__form" id="submit_form">
            <label asp-for="Email"></label><span asp-validation-for="Email" style="color: #ad545f;" class="text-danger"></span>
            <input class="input @ViewData["Denied"]" asp-for="Email" />
            <label asp-for="Password"></label><span asp-validation-for="Password" style="color: #ad545f;" class="text-danger"></span>
            <input class="input @ViewData["Denied"]" type="password" asp-for="Password" />
            @if (@ViewData["Denied"] != null)
            {
                <p style="color: #ad545f;">Неверний e-mail или пароль</p>
            }
            <a href="@Url.Action("ForgotPassword","Account")">Забыли пароль?</a>
            <button type="submit" class="button">Войти</button>
        </form>
    </div>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/login.js"></script>
