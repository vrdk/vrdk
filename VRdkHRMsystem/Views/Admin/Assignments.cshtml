@model VRdkHRMsystem.Models.SharedModels.Assignment.AssignmentListViewModel

@{
    ViewData["Title"] = "SickLeaves";
    var searchKey = ViewData["SearchKey"] as string;
}

<form asp-action="Assignments" method="get" class="content">
    <section class="listsection">
        <div class="table">
            <div class="table__header">
                <p>Список командировок</p>
                <button class="assignmentlist__button" type="button" onclick="addAssignment()">
                    <img src="~/images/plus.png" alt="plus" />
                    <p>Добавить<span> командировку</span></p>
                </button>
                <div class="table__header_search">
                    <input type="text" placeholder="Найти" name="searchKey" value="@searchKey" />
                    <button type="submit"><img src="~/images/search.png" alt="search" /></button>
                </div>
            </div>
            <div class="table__body">
                @if (Model != null && Model.Assignments.Count() != 0)
                {
                    <div class="table__body_title assignmentlist__body_title">
                        <p class="assignmentlist__name">Название</p>
                        <p class="assignmentlist__countmembers">Учасники</p>
                        <p class="assignmentlist__dates">Даты</p>
                        <p class="assignmentlist__duration">Длительность</p>
                        <p class="assignmentlist__info">Инфо</p>
                    </div>
                    foreach (var item in Model.Assignments)
                    {
                        <div class="table__body_content assignmentlist__body_content">
                            <div class="table__body_block">
                                <p class="assignmentlist__name">@item.Name</p>
                                <p class="assignmentlist__countmembers">@item.EmployeesCount</p>
                                <p class="assignmentlist__dates">@item.BeginDate.ToString("dd.MM.yyyy") - @item.EndDate.ToString("dd.MM.yyyy")</p>
                                <p class="assignmentlist__duration">@item.Duration</p>                            
                                <p class="assignmentlist__info">
                                    <img src="~/images/cross2.png" alt="exit" style="cursor:pointer" onclick="deleteAssignment('@item.AssignmentId')"/>
                                    <img src="~/images/penciltable.png" alt="pencil" onclick="editAssignment('@item.AssignmentId')" style="cursor:pointer" />
                                </p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="table__body_content assignmentlist__body_content">
                        <div class="table__body_block">
                            <p class="vaclist__name">Нет записей</p>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="center" style="margin-left:45%">
            @if (Model.Count > Model.PageSize)
            {
                <p style="margin-bottom:12px;">
                    @if (Model.PageNumber == 0)
                    {
                        <a href="#!" class="disabled" style="cursor:not-allowed;"><img src="~/images/cross.png" alt="arrow" style="margin-bottom:2px;" /></a>
                    }
                    else
                    {
                        <a asp-action="Assignments" asp-route-pageNumber=@(Model.PageNumber-1) asp-route-searchKey="@searchKey"><img src="~/images/arrow-left.png" alt="arrow" /></a>
                    }

                    @if (Model.Count % Model.PageSize != 0 ? Model.PageNumber == Model.Count / Model.PageSize : Model.PageNumber == Model.Count / Model.PageSize - 1)
                    {
                        <a href="#!" class="disabled" style="cursor:not-allowed;"><img src="~/images/cross.png" alt="arrow" style="margin-bottom:2px;" /></a>
                    }
                    else
                    {
                        <a asp-action="Assignments" asp-route-pageNumber=@(Model.PageNumber+1) asp-route-searchKey="@searchKey"><img src="~/images/arrow-right.png" alt="arrow" /></a>
                    }
                </p>
            }
        </div>
    </section>
</form>
<div class="modal fade" id="request_modal" role="dialog" style="">
    <div class="modal-dialog" id="modal_place">
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/assignment.js"></script>
}